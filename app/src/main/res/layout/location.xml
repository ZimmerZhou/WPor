<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/relalayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/weather1"
        android:layout_weight="1.5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/location"
            android:layout_alignBottom="@+id/location"
            android:layout_marginLeft="10dp"
            android:id="@+id/image_location"
            android:src="@drawable/cur_location"/>
        <TextView
            android:layout_toRightOf="@+id/image_location"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dip"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="北京"
            android:textSize="15dip"/>




        <TextView
            android:id="@+id/aqilty"
            android:layout_width="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_height="wrap_content"
            android:text="空气70 良好"
            android:layout_below="@+id/location"
            android:layout_marginTop="5dip"
           android:layout_alignLeft="@+id/location"
            android:textSize="15dip"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:id="@+id/te"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/temp"
        android:text="7"
        android:layout_centerInParent="true"

        android:textColor="#FFFFFF"

        android:textSize="70dip"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:text="O"

        android:textColor="#FFFFFF"
        android:textSize="20dip"/>




</LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/wea"
            android:layout_below="@+id/te">

            <TextView
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晴朗"

                android:textSize="15dp"
                android:layout_centerHorizontal="true"

                android:id="@+id/Skycon"

                />
